const program = require("commander");
const inquirer = require("inquirer");
const { join } = require("path");
const { execSync } = require("child_process");

const {
    existsSync,
    mkdirSync,
    readFileSync,
    unlinkSync,
} = require("fs");

const root = join(__dirname, "../");
const pjson = JSON.parse(readFileSync(join(root, "package.json")).toString());

const prompt = inquirer.createPromptModule();

program.version(pjson.version, "-v, --version", "output the current version")
    .allowUnknownOption();

program.command("network", { isDefault: true })
    .description("build network library")
    .option("-l, --lint", "lint the code before building")
    .action((command) => {
        if (command.lint) execSync(`${join(root, "node_modules", ".bin", "eslint")} '*.js'`, { cwd: root, stdio: "inherit" });
        if (!existsSync(join(root, "builds"))) mkdirSync(join(root, "builds"));

        execSync("yarn pack", { cwd: root, stdio: "inherit" });

        if (existsSync(join(root, "builds", `hoobs-network-v${pjson.version}.tgz`))) unlinkSync(join(root, "builds", `hoobs-network-v${pjson.version}.tgz`))

        execSync(`mv ${join(root, `hoobs-network-v${pjson.version}.tgz`)} ${join(root, "builds", `hoobs-network-v${pjson.version}.tgz`)}`, { cwd: root, stdio: "inherit" });
    });

program.command("publish")
    .description("publish the network library to npm")
    .action(() => {
        prompt([
            {
                type: "confirm",
                name: "confirm",
                default: false,
                message: "Are you sure you want to publish",
                format: (value) => value.toLowerCase(),
            },
        ]).then((result) => {
            if (result && result.confirm) {
                execSync(`${join(root, "bin", "build")} network`, { cwd: root, stdio: ["inherit", "inherit", "inherit"] });
                execSync(`yarn publish --access public --new-version ${pjson.version}`, { cwd: root, stdio: ["inherit", "inherit", "inherit"] });
            }
        });
    });

program.parse(process.argv);
